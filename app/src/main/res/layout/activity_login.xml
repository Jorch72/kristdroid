<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.teamdentro.kristwallet.activities.LoginActivity"
    android:background="@color/lb600"
    android:theme="@style/Theme.KristDark">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:id="@+id/accountSelectKristIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/icon"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/krist"
        android:scaleType="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_select"
        android:id="@+id/accountSelectLabel"
        android:layout_below="@+id/accountSelectKristIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="?android:listSeparatorTextViewStyle"
        android:textColor="#ffffffff"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/accountSelectListView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/accountSelectLabel" />

    <com.getbase.floatingactionbutton.AddFloatingActionButton
        android:id="@+id/addAcountFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_plusIconColor="@color/white"
        fab:fab_colorNormal="@color/doA200"
        fab:fab_colorPressed="@color/doA400"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
