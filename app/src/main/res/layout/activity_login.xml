<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.teamdentro.kristwallet.activities.LoginActivity"
    android:background="@color/lb600"
    android:theme="@style/Theme.KristDark">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:id="@+id/accountSelectKristIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/icon"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/krist"
        android:scaleType="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />

    <FrameLayout
        android:id="@+id/kristLoginFragment"
        android:layout_below="@+id/accountSelectKristIcon"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </FrameLayout>

</RelativeLayout>
