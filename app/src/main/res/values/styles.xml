<resources>
    <style name="Theme.KristLight" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/lb600</item>
        <item name="colorPrimaryDark">@color/lb800</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.KristDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/lb600</item>
        <item name="colorPrimaryDark">@color/lb800</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="NavDrawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/nav_drawer_margin_offset</item>
    </style>

    <style name="CardStyle">
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>
